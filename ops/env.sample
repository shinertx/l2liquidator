# Worker container env example
NODE_ENV=production
LOG_LEVEL=info

# Risk engine service
RISK_ENGINE_URL=http://risk-engine:4010
RISK_ENGINE_HOST=0.0.0.0
RISK_ENGINE_PORT=4010

# SLO guardrails
TARGET_P95_MS=100
MAX_REVERT_RATE=0.02
PNL_MULT_MIN=4.0
MIN_NET_USD=1.50

# Volatility / Depeg modes
DEPEG_MODE=false
VOL_MODE_SIZE_SHRINK_BP=500
VOL_MODE_MIN_NET_USD=3.00

# Treasury automation
CHAIN_SPEND_CAP_USD=5000
GAS_TOPUP_MIN_USD=1500

# Analytics loop tuning
ANALYTICS_POLL_MS=10000
ANALYTICS_FLUSH_MS=60000
ANALYTICS_BATCH=500

# RPC endpoints
RPC_ARB=
RPC_OP=
RPC_BASE=
RPC_POLYGON=

# Websocket RPC endpoints (recommended for realtime watchers)
WS_ARB=
WS_OP=
WS_BASE=
WS_POLYGON=

# Private relay controls
PRIVATE_RELAYS=flashbots,infura
PUBLIC_MEMPOOL_DISABLED=true

# Private mempool endpoints (optional)
PRIVTX_ARB=
PRIVTX_OP=
PRIVTX_BASE=
PRIVTX_POLYGON=

# Alerting webhook (Slack/Discord/Teams)
ALERT_WEBHOOK_URL=

# Wallet private keys (hex 0x...)
WALLET_PK_ARB=
WALLET_PK_OP=
WALLET_PK_BASE=
WALLET_PK_POLYGON=

# Multisig / owner addresses
SAFE_ADDRESS_ARB=0xAC6A79de1b7aA655a6323a470C66f0a6C657fA5c
SAFE_ADDRESS_OP=0xAC6A79de1b7aA655a6323a470C66f0a6C657fA5c
SAFE_ADDRESS_BASE=0xAC6A79de1b7aA655a6323a470C66f0a6C657fA5c
SAFE_ADDRESS_POLYGON=0xAC6A79de1b7aA655a6323a470C66f0a6C657fA5c

# Subgraph endpoints (optional overrides)
GRAPH_API_KEY=
AAVE_V3_SUBGRAPH_ARB=https://gateway.thegraph.com/api/${GRAPH_API_KEY}/subgraphs/id/4xyasjQeREe7PxnF6wVdobZvCw5mhoHZq3T7guRpuNPf
AAVE_V3_SUBGRAPH_OP=https://gateway.thegraph.com/api/${GRAPH_API_KEY}/subgraphs/id/3RWFxWNstn4nP3dXiDfKi9GgBoHx7xzc7APkXs1MLEgi
AAVE_V3_SUBGRAPH_BASE=https://gateway.thegraph.com/api/${GRAPH_API_KEY}/subgraphs/id/<BASE_SUBGRAPH_ID>
