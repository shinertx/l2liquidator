{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": false,
    "rootDir": ".",
    "outDir": "dist",
    "declaration": false,
    "skipLibCheck": true
  },
  "include": ["offchain/**/*.ts", "scripts/**/*.ts", "types/**/*.d.ts"]
}
