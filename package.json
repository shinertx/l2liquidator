{
  "name": "l2-micro-liquidator",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node --transpile-only offchain/orchestrator.ts",
    "build": "tsc -p .",
    "postbuild": "node scripts/postbuild.js",
    "lint": "eslint . --ext .ts",
    "sync:aave": "ts-node --transpile-only offchain/tools/sync_config.ts",
    "sync:morpho": "ts-node --transpile-only offchain/tools/sync_morpho_tokens.ts",
    "sync:morpho:quick": "ts-node --transpile-only offchain/tools/sync_morpho_quick.ts",
    "sync:morpho:markets": "ts-node --transpile-only offchain/tools/sync_morpho_markets.ts",
    "feed:check": "ts-node --transpile-only offchain/tools/fetch_feeds.ts",
    "quote:check": "ts-node --transpile-only offchain/tools/quote-check.ts",
    "pipeline": "ts-node --transpile-only offchain/pipeline/runner.ts",
    "replay": "ts-node --transpile-only offchain/tools/replay-candidates.ts",
    "simulate:attempt": "ts-node --transpile-only offchain/tools/simulate_attempt.ts",
    "analyze:attempts": "ts-node --transpile-only offchain/tools/analyze_attempts.ts",
    "sample:plan-null": "ts-node --transpile-only offchain/tools/plan_null_sampler.ts",
    "inspect:liq": "node /app/tools/inspect_liquidator.js",
    "subgraph:check": "ts-node --transpile-only offchain/tools/subgraph_check.ts",
    "preflight": "ts-node --transpile-only offchain/tools/preflight.ts",
    "routers:allow": "ts-node --transpile-only offchain/tools/allow_routers.ts",
    "safe:allow": "ts-node --transpile-only offchain/tools/safe_allow_routers.ts",
  "alerts:send": "ts-node --transpile-only scripts/alerts/send_webhook.ts",
    "logs:worker": "bash scripts/tail_worker_logs.sh",
    "analytics:perf": "ts-node --transpile-only offchain/analytics/perf_loop.ts",
    "risk-engine": "ts-node --transpile-only offchain/risk_engine/server.ts",
    "protocol:census": "ts-node --transpile-only offchain/tools/protocol_census.ts",
    "fabric": "FABRIC_CONFIG=${FABRIC_CONFIG:-./fabric.config.yaml} FABRIC_PROM_PORT=${FABRIC_PROM_PORT:-9470} IS_FABRIC=1 ts-node --transpile-only offchain/arb_fabric/runner.ts",
    "laf:replay": "ts-node --transpile-only offchain/tools/laf_replay.ts",
    "test:unit": "ts-node --transpile-only offchain/tests/run_tests.ts",
    "harness": "ts-node --transpile-only offchain/tools/harness.ts",
    "dryrun": "ts-node --transpile-only offchain/orchestrator.ts --dry-run"
  },
  "dependencies": {
    "@bgd-labs/aave-address-book": "^4.32.0",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^12.0.3",
    "fastify": "^4.28.1",
    "ioredis": "^5.4.1",
    "openai": "^4.57.0",
    "pg": "^8.12.0",
    "pino": "^9.2.0",
    "prom-client": "^15.1.1",
    "viem": "^2.13.6",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.45.0"
  }
}
